{
    "name": "@openkite/kite-workspace",
    "private": true,
    "version": "0.0.1-experimental",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev:demo": "npm run dev --workspace=packages/demo",
        "dev:ui": "npm run dev --workspace=packages/ui",
        "build:ui": "npm run build --workspace=packages/ui",
        "build:demo": "npm run build --workspace=packages/demo",
        "build:all": "npm run build:ui && npm run build:demo",
        "storybook": "npm run storybook --workspace=packages/ui",
        "build-storybook": "npm run build-storybook --workspace=packages/ui",
        "publish:ui": "npm run publish --workspace=packages/ui"
    }
}
